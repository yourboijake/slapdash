{% macro SignIn() %}
  <div class="hero min-h-screen bg-base-200">
    <div class="hero-content flex-col">
      <div class="text-center lg:text-left">
        <h1 class="text-3xl font-bold">Sign In</h1>
      </div>
      <div class="card flex-shrink-0 w-full max-w-sm shadow-lg bg-base-100">
        <div class="card-body">
          <form 
            id="sign-in-form"
            hx-post="/sign-in"
            hx-target="#toast-container"
          >
            <div class="form-control">
              <label class="label mb-1 text-base">
                <span class="label-text">Email</span>
              </label>
              <input
                type="text"
                placeholder=""
                name="email"
                class="input input-bordered focus:outline-none focus:ring-0 text-base"
              />
            </div>
            <div class="form-control">
              <label class="label mb-1 mt-3 text-base">
                <span class="label-text">Password</span>
              </label>
              <input
                type="password"
                placeholder=""
                name="password"
                class="input input-bordered focus:outline-none focus:ring-0 text-base"
              />
            </div>
            <div class="form-control mt-6">
              <button class="btn btn-primary w-full text-base">Login</button>
            </div>
          </form>
          <section id="toast-container"></section>
          <div class="opacity-80 text-base text-center mt-2">
            No account? You can
            <a
              class="font-bold hover:underline hover: opacity-100"
              href="/sign-up"
              >Sign Up</a
            >
          </div>
        </div>
      </div>
    </div>
  </div>
{% endmacro %}