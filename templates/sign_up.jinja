{% macro SignUp() %}
  <div class="hero min-h-screen bg-base-200">
    <div class="hero-content flex-col ">
      <div class="text-center lg:text-left">
        <h1 class="text-3xl font-bold">Sign Up</h1>
      </div>
      <div class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
        <div class="card-body">
          <form id="sign-up-form" action="/sign-up" method="post">
            <div class="form-control">
              <label class="label mb-1 text-lg">
                <span class="label-text">Full Name</span>
              </label>
              <input
                type="text"
                placeholder=""
                name="full_name"
                class="input input-bordered focus:outline-none focus:ring-0 text-base"
              />
            </div>

            <div class="form-control">
              <label class="label mb-1 mt-3 text-lg">
                <span class="label-text">Email</span>
              </label>
              <input
                type="text"
                placeholder=""
                name="email"
                class="input input-bordered focus:outline-none focus:ring-0 text-base"
              />
            </div>
            <div class="form-control">
              <label class="label mb-1 mt-3 text-lg">
                <span class="label-text">Password</span>
              </label>
              <input
                type="password"
                placeholder=""
                name="password"
                class="input input-bordered focus:outline-none focus:ring-0 text-base"
              />
            </div>
            <div class="form-control">
              <label class="label mb-1 mt-3 text-lg">
                <span class="label-text">Confirm Password</span>
              </label>
              <input
                type="password"
                placeholder=""
                name="confirm_password"
                class="input input-bordered focus:outline-none focus:ring-0 text-base"
              />
            </div>
            <div class="form-control mt-6">
              <button class="btn btn-primary w-full text-base">
                Create account
              </button>
            </div>
          </form>
          <div class="opacity-80 text-base mt-4">
            If you have an account, you can
            <a
              class="font-bold hover:underline hover: opacity-100"
              href="/sign-in"
              >Sign In</a
            >
          </div>
        </div>
      </div>
    </div>
  </div>
{% endmacro %}
